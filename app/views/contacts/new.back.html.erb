<div class="container">
    <div class="contact-content col-md-4 col-md-offset-4 col-sm-10 col-sm-offset-1">
        <h2>お問い合わせ</h2>
        <% if @contact.errors.any? %>
            <h2><%= @contact.errors.count %>件のエラーがあります</h2>
            <div id="error_explanation">
                <ul>
                    <% @contact.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>
        <%= form_for(@contact, url: confirm_contacts_path) do |f| %>
            <div class="form-group">
                <%= f.text_field :name, class: "form-control", placeholder: "お名前" %>
            </div>
            <div class="form-group">
                <%= f.email_field :email, class: "form-control", placeholder: "eメール" %>
            </div>
            <div class="form-group">
                <%= f.text_field :content, class: "form-control", placeholder: "内容" %>
            </div>
            <p>
                <%= f.submit "登録", class: "btn btn-primary btn-block" %>
            </p>
        <% end %>
    </div>
</div>


