<div class="container">
    <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
        <%= form_for(@contact) do |f| %>
            <%= f.hidden_field :name %>
            <%= f.hidden_field :email %>
            <%= f.hidden_field :content %>
            <p><%= @contact.name %></p>
            <p><%= @contact.email %></p>
            <p><%= @contact.content %></p>
            <%= f.submit "OK", class: "btn btn-primary btn-box" %>
            <%= f.submit "戻る", name: "back", class: "btn btn-primary btn-box" %>
        <% end %>
    </div>
</div>
