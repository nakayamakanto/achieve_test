<div class="container">
  <h2>ユーザー</h2>
  <div class="clearfix">
    <% @users.each do |user| %>
      <div class="col-md-4 col-md-offset-4 col-sm-4 col-sm-offset-4 col-xs-6 col-xs-offset-3 user_box clearfix">
        <%= profile_img(user) %>
        <div class="my_email">
          <%= user.email %>
        </div>
        <%= render 'follow_form', user: user %>
      </div>
    <% end %>
  </div>
  <div class="text-center">
    <%= link_to "戻る", root_path %>
  </div>
</div>
<div class="bottom-adaptor"></div>
<div id="page-top-btn" class="page-top-btn">
    <p><a class="move-page-top" id="move-page-top">▲</a></p>
</div>

